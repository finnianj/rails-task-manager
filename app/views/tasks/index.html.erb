<div class="container d-flex flex-column align-items-center my-4 box">
<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <div class="form-check my-4 list">
      <%= link_to task.title, task_path(task) %></label>
    </div>
  <% end %>

  <%= link_to "Add a new task", new_task_path%>

</ul>
</div>
